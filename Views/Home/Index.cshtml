    <div>@prices[0]</div>
</div>

<div class="napoli">
    <div>@names[1]</div>
    <div>@descriptions[1]</div>
    <image src="@images[1]" style="width: 200px;"></image>
    <div>@prices[1]</div>
</div>

<div class="diavola">
